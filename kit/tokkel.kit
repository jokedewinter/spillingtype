    gutter: 16,
    swipeAngle: false,
    speed: 400,
    autoplay: true,
    autoplayPosition: 'bottom',
    autoplayTimeout: 3000,
    nav: false,
    controlsPosition: 'bottom',
    controlsContainer: '#custom-controls',
    slideBy: "page",
